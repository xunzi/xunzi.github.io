&lt;span class="nb"&gt;export&lt;/span&gt; &lt;span class="nv"&gt;GOROOT&lt;/span&gt;&lt;span class="o"&gt;=&lt;/span&gt;/usr/local/Cellar/go/&lt;span class="nv"&gt;$GOVERSION&lt;/span&gt;/libexec
